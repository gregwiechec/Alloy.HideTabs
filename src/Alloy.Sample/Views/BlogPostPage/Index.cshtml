@using AlloyTemplates
@using AlloyTemplates.Models.Pages
@model Alloy.Sample.Models.ViewModels.PageViewModel<AlloyTemplates.Models.Pages.BlogPostPage>

@{ Layout = "~/Views/Shared/Layouts/_LeftNavigation.cshtml"; }

<h1 @Html.EditAttributes(x => x.CurrentPage.PageName)>@Model.CurrentPage.PageName</h1>
<p class="introduction" @Html.EditAttributes(x => x.CurrentPage.MetaDescription)>@Model.CurrentPage.MetaDescription</p>
<div class="row">
    <div class="span8 clearfix" @Html.EditAttributes(x => x.CurrentPage.MainBody)>
        @Html.DisplayFor(m => m.CurrentPage.MainBody)
    </div>
</div>

@if (Model.CurrentPage.BlogPostType == BlogPostType.Recipe)
{
    @Html.PropertyFor(x=>x.CurrentPage.RecipeTitle, new { Tag = "h2" });
    @Html.PropertyFor(x => x.CurrentPage.RecipeContent);
}

@if (Model.CurrentPage.BlogPostType == BlogPostType.Sponsored)
{
    @Html.PropertyFor(x=>x.CurrentPage.SponsoredContentCustomerLogo);
    <span>Visited: </span>@Html.PropertyFor(x => x.CurrentPage.SponsoredContentUrl);
}
